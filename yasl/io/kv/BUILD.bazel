load("//bazel:yasl.bzl", "yasl_cc_library", "yasl_cc_test")

package(default_visibility = ["//visibility:public"])

yasl_cc_library(
    name = "kvstore",
    hdrs = ["kvstore.h"],
    deps = [
        "//yasl/base:byte_container_view",
    ],
)

yasl_cc_library(
    name = "memory_kvstore",
    srcs = ["memory_kvstore.cc"],
    hdrs = ["memory_kvstore.h"],
    deps = [
        ":kvstore",
        "//yasl/base:exception",
    ],
)

yasl_cc_library(
    name = "leveldb_kvstore",
    srcs = ["leveldb_kvstore.cc"],
    hdrs = ["leveldb_kvstore.h"],
    deps = [
        ":kvstore",
        "//yasl/base:exception",
        "@com_github_brpc_brpc//:brpc",
        "@com_github_google_leveldb//:leveldb",
    ],
)

yasl_cc_test(
    name = "kvstore_test",
    srcs = ["kvstore_test.cc"],
    deps = [
        ":leveldb_kvstore",
        ":memory_kvstore",
        "//yasl/crypto:pseudo_random_generator",
    ],
)
