    deps = [
        "//yasl/base:exception",
    ],
)

yasl_cc_test(
    name = "thread_pool_test",
    srcs = ["thread_pool_test.cc"],
    deps = [
        ":thread_pool",
    ],
)

yasl_cc_library(
    name = "parallel",
    srcs = [
        "parallel_common.cc",
        "parallel_native.cc",
    ],
    hdrs = [
        "parallel.h",
        "parallel_native.h",
