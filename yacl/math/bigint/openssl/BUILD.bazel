load("//bazel:yacl.bzl", "yacl_cc_library")

package(default_visibility = ["//visibility:public"])

yacl_cc_library(
    name = "openssl_lib",
    srcs = ["openssl_lib.cc"],
    hdrs = ["openssl_lib.h"],
    deps = [
        ":mont_space",
        "//yacl/math/bigint:bigint_lib",
    ],
    alwayslink = 1,
)

yacl_cc_library(
    name = "mont_space",
    srcs = ["mont_space.cc"],
    hdrs = ["mont_space.h"],
    deps = [
        "//yacl/math/bigint:mont_space",
    ],
)

yacl_cc_library(
    name = "bignum",
    srcs = ["bignum.cc"],
    hdrs = ["bignum.h"],
    deps = [
        "//yacl/base:byte_container_view",
        "//yacl/math:common",
        "//yacl/utils/spi:type_traits",
        "@abseil-cpp//absl/strings:str_format",
        "@openssl",
    ],
)
