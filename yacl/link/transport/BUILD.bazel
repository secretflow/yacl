load("@rules_proto//proto:defs.bzl", "proto_library")
load("//bazel:yacl.bzl", "yacl_cc_binary", "yacl_cc_library", "yacl_cc_test")
load("@rules_cc//cc:defs.bzl", "cc_proto_library")

package(default_visibility = ["//visibility:public"])

yacl_cc_library(
    name = "channel",
    srcs = ["channel.cc"],
    hdrs = ["channel.h"],
    deps = [
        "//yacl/base:buffer",
        "//yacl/base:byte_container_view",
        "//yacl/base:exception",
        "//yacl/link:ssl_options",
        "//yacl/utils:segment_tree",
        "@com_github_brpc_brpc//:brpc",
    ],
)

yacl_cc_library(
    name = "channel_mem",
    srcs = ["channel_mem.cc"],
    hdrs = ["channel_mem.h"],
    deps = [
        ":channel",
    ],
)

cc_proto_library(
    name = "ic_transport_proto",
    deps = ["@org_interconnection//interconnection/link"],
)

yacl_cc_library(
    name = "channel_chunked_base",
    srcs = ["channel_chunked_base.cc"],
    hdrs = ["channel_chunked_base.h"],
    deps = [
        ":channel",
        ":ic_transport_proto",
        "@com_github_brpc_brpc//:brpc",
        "@com_google_absl//absl/strings",
    ],
)

yacl_cc_library(
    name = "channel_brpc",
    srcs = ["channel_brpc.cc"],
    hdrs = ["channel_brpc.h"],
    deps = [
        ":channel_chunked_base",
    ],
)

yacl_cc_library(
    name = "channel_brpc_blackbox",
    srcs = ["channel_brpc_blackbox.cc"],
    hdrs = ["channel_brpc_blackbox.h"],
    deps = [
        ":channel_chunked_base",
        "//yacl/link/transport/blackbox_interconnect:blackbox_service_errorcode",
        "//yacl/link/transport/blackbox_interconnect:blackbox_service_proto",
    ],
)

yacl_cc_test(
    name = "channel_brpc_test",
    srcs = ["channel_brpc_test.cc"],
    deps = [
        ":channel_brpc",
    ],
)

yacl_cc_test(
    name = "channel_brpc_blackbox_test",
    srcs = ["channel_brpc_blackbox_test.cc"],
    deps = [
        ":channel_brpc_blackbox",
        "//yacl/link/transport/blackbox_interconnect:blackbox_dummy_service_proto",
    ],
)
