load("//bazel:yacl.bzl", "yacl_cc_binary", "yacl_cc_library", "yacl_cc_test")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "circuit_data",
    srcs = glob(["data/*"]),
)

yacl_cc_library(
    name = "bristol_fashion",
    srcs = ["bristol_fashion.cc"],
    hdrs = ["bristol_fashion.h"],
    deps = [
        "//yacl/io/stream:file_io",
        "//yacl/link:context",
    ],
)

yacl_cc_test(
    name = "bristol_fashion_test",
    srcs = ["bristol_fashion_test.cc"],
    data = [":circuit_data"],
    deps = [
        ":bristol_fashion",
    ],
)
