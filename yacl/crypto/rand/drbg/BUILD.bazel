load("//bazel:yacl.bzl", "yacl_cc_library", "yacl_cc_test")

# core
yacl_cc_library(
    name = "drbg",
    visibility = ["//visibility:public"],
    deps = [
        ":ic_factory",
        ":openssl_factory",  # since we have only one impl
    ],
)

# private spi
yacl_cc_library(
    name = "spi",
    hdrs = [
        "drbg.h",
    ],
    visibility = ["//visibility:private"],
    deps = [
        "//yacl:secparam",
        "//yacl/base:byte_container_view",
        "//yacl/base:int128",
        "//yacl/crypto/rand/entropy_source",
        "//yacl/utils/spi",
    ],
)

# private openssl drbg impl
yacl_cc_library(
    name = "openssl_factory",
    srcs = [
        "openssl_factory.cc",
    ],
    hdrs = [
        "openssl_factory.h",
    ],
    data = [
        "//yacl/crypto/ossl-provider:prov_shared",  # openssl provider shared lib
    ],
    visibility = ["//visibility:private"],
    deps = [
        ":spi",
        "//yacl/crypto:openssl_wrappers",
        "//yacl/crypto/ossl-provider:helper",  # helper
        "//yacl/crypto/rand/entropy_source",
    ],
    alwayslink = 1,
)

# ic factory
yacl_cc_library(
    name = "ic_factory",
    srcs = [
        "ic_factory.cc",
    ],
    hdrs = [
        "ic_factory.h",
    ],
    data = [
        "//yacl/crypto/ossl-provider:prov_shared",  # openssl provider shared lib
    ],
    visibility = ["//visibility:private"],
    deps = [
        ":spi",
        "//yacl/crypto:openssl_wrappers",
        "//yacl/crypto/ossl-provider:helper",  # helper
        "//yacl/crypto/rand/entropy_source",
        "@com_github_greendow_hash_drbg//:hash_drbg",
    ],
    alwayslink = 1,
)

yacl_cc_test(
    name = "factory_test",
    srcs = ["factory_test.cc"],
    deps = [
        ":drbg",
    ],
)
