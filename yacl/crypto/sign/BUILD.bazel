load("//bazel:yacl.bzl", "yacl_cc_library", "yacl_cc_test")

package(default_visibility = ["//visibility:public"])

yacl_cc_library(
    name = "signing",
    hdrs = ["signing.h"],
    deps = [
        "//yacl/base:byte_container_view",
    ],
)

yacl_cc_library(
    name = "sm2_signing",
    srcs = ["sm2_signing.cc"],
    hdrs = ["sm2_signing.h"],
    deps = [
        ":signing",
        "//yacl:secparam",
        "//yacl/crypto:key_utils",
        "//yacl/crypto/hash:hash_utils",
    ],
)

yacl_cc_test(
    name = "sm2_signing_test",
    srcs = ["sm2_signing_test.cc"],
    deps = [
        ":sm2_signing",
    ],
)

yacl_cc_library(
    name = "rsa_signing",
    srcs = ["rsa_signing.cc"],
    hdrs = ["rsa_signing.h"],
    deps = [
        ":signing",
        "//yacl:secparam",
        "//yacl/crypto:key_utils",
        "//yacl/crypto/hash:hash_utils",
    ],
)

yacl_cc_test(
    name = "rsa_signing_test",
    srcs = ["rsa_signing_test.cc"],
    deps = [
        ":rsa_signing",
    ],
)
