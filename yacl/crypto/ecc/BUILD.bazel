load("//bazel:yacl.bzl", "yacl_cc_library", "yacl_cc_test")

package(default_visibility = ["//visibility:public"])

yacl_cc_library(
    name = "ecc",
    deps = [
        "//yacl/crypto/ecc/libsodium",
        "//yacl/crypto/ecc/mcl:ecc",
        "//yacl/crypto/ecc/openssl",
        "//yacl/crypto/ecc/toy",
    ],
)

yacl_cc_library(
    name = "spi",
    srcs = [
        "ecc_spi.cc",
        "group_sketch.cc",
    ],
    hdrs = [
        "ecc_spi.h",
        "group_sketch.h",
    ],
    deps = [
        ":curve_meta",
        ":ec_point",
        "//yacl/base:byte_container_view",
        "//yacl/math/mpint",
        "//yacl/utils/spi",
    ],
)

yacl_cc_library(
    name = "ec_point",
    srcs = [
        "ec_point.cc",
    ],
    hdrs = [
        "ec_point.h",
    ],
    deps = [
        ":any_ptr",
        "//yacl/math/mpint",
    ],
)

yacl_cc_library(
    name = "any_ptr",
    hdrs = ["any_ptr.h"],
    deps = ["//yacl/base:exception"],
)

yacl_cc_library(
    name = "curve_meta",
    srcs = [
        "curve_meta.cc",
    ],
    hdrs = [
        "curve_meta.h",
    ],
    deps = [
        "//yacl/base:exception",
        "@com_google_absl//absl/strings",
    ],
)

yacl_cc_test(
    name = "ecc_test",
    srcs = [
        "ecc_test.cc",
    ],
    deps = [
        ":ecc",
        "@com_github_fmtlib_fmt//:fmtlib",
        "@yacl//yacl/utils:parallel",
    ],
)
