    ],
    deps = [
        "//yacl/base:exception",
        "@abseil-cpp//absl/strings",
        "//yacl/math/mpint",
        "//yacl/crypto/hash:hash_utils",
        "//yacl/crypto/ecc:curve_meta",
        "//yacl/crypto/ecc:ec_point",
    ],
)

yacl_cc_test(
    name = "hash_to_curve_test",
    srcs = [
        "hash_to_curve_test.cc",
    ],
    deps = [
        ":hash_to_curve",
        "@fmt",
        "@yacl//yacl/utils:parallel",
    ],
)
