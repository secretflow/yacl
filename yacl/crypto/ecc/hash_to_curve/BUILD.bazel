        "//yacl/math/mpint",
        "//yacl/crypto/hash:hash_utils",
        "//yacl/crypto/ecc:ec_point",
        ":hash_to_curve_util",
    ],
)

yacl_cc_library(
    name = "p521",
    srcs = [
        "p521.cc",
    ],
