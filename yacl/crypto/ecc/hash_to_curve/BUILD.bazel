        "//yacl/math/mpint",
        "//yacl/crypto/hash:hash_utils",
        "//yacl/crypto/ecc:ec_point",
        ":hash_to_curve_util",
    ],
)

yacl_cc_library(
    name = "curve25519",
    srcs = [
        "curve25519.cc",
    ],
    hdrs = [
        "curve25519.h",
    ],
    deps = [
        "//yacl/base:exception",
        "@abseil-cpp//absl/strings",
        "//yacl/math/mpint",
        "//yacl/crypto/hash:hash_utils",
